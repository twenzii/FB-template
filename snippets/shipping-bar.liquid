<style>
  .shipping-bar {
      display: flex;
      align-items: center;
      justify-content: center;
      gap: 8px;
      background: #f5f5f5;
      padding: 10px 15px;
      border-radius: 10px;
      font-size: 16px;
      font-weight: 400;
      margin-top: -5px;  /* Space above */
      margin-bottom: -20px; /* Space below */
  }
  .shipping-bar strong {
      font-weight: bold;
  }
</style>

<div class="shipping-bar">
  {% if block.settings.shipping_icon != blank %}
    {{ block.settings.shipping_icon }}
  {% endif %}
  {% if block.settings.shipping_heading != blank %}
    | <strong>{{ block.settings.shipping_heading }}</strong>
  {% endif %}
</div>